<% layout(".././layouts/main") %>
<div class="row">
  <div class="col-4">
    <h1>Login</h1>
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="email" class="form-label">Elektron manzilingiz</label>
        <input
          type="email"
          id="email"
          name="email"
          class="form-control"
          placeholder="email@email.com"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Parolingiz</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          required
        />
      </div>

      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
