<% layout(".././layouts/main") %>
<div>
  <a class="btn btn-primary my-3" href="/posts/new">Post qo'shish</a>
  <% for(post of posts){ %>
  <div class="cardPost">
    <div class="cardText">
      <div>
        <h3><%= post.title %></h3>
        <% body = ''%> <% if(post.body.length > 300){ %> <% body =
        post.body.substring(0, 300) + "..." %> <% } else { %> <% body =
        post.body%> <% } %>

        <p><%= body %></p>
      </div>
      <a class="btn btn-primary" href="/post/<%=post._id%>">Ba'tafsil O'qish</a>
    </div>
    <div class="cardImage">
      <% if(post.Photos.length > 0) { %>
      <img
        src="data:image/png;base64,<%= post.Photos[0].dataValues.data %>"
        alt="<%= post.Photos[0].dataValues.description %>"
      />
      <% } else { %>
      <img src="../photo/imageNot.png" alt="No image" />
      <% } %>
    </div>
  </div>
  <% } %>
</div>
