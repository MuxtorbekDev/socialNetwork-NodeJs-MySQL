<% layout(".././layouts/main") %>
<div class="row">
  <div class="col-6">
    <h1>Create a new post</h1>
    <form action="/posts" method="post">
      <div class="form-group my-3">
        <label for="title">Sarlavha</label>
        <input type="text" class="form-control" id="title" name="post[title]" />
      </div>
      <div class="form-group my-3">
        <label for="body">Matn</label>
        <textarea
          class="form-control"
          id="body"
          name="post[body]"
          style="height: 7rem"
        ></textarea>
      </div>
      <button type="submit" class="btn btn-primary my-3">Send</button>
    </form>
  </div>
</div>
