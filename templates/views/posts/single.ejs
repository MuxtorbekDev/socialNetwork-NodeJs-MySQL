<% layout(".././layouts/main") %>
<div class="row">
  <div class="col-4">
    <h1><%= post.title %></h1>
    <p><%= post.body %></p>
  </div>
  <div class="row">
    <div class="col-3">
      <a class="btn btn-warning" href="/post/<%= post._id %>/edit">Postni taxrirlash</a>
    </div>
    <div class="col-3">
      <form action="/post/<%= post._id %>?_method=DELETE" method="post">
        <button class="btn btn-danger">
          Postni o'chirish
        </button>
    </div>
  </div>
</div>
